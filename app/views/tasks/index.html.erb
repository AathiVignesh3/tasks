<p style="color: green"><%= notice %></p>
<center>
<h1>Tasks</h1>
<table id="tasks" cellspacing ="50" width="700">
<%if @tasks.length > 0%>
<tr> 
<th>Name</th>
<th>Duedate</th>
<th>Status</th>
<th>Modify</th>
</tr>

  <% @tasks.each do |task| %>
  <tr>
  <%= render task %>
  <td><%= link_to "Show this task", task %></td>
  </tr>
  <% end %>
<%end %>
</table>

<%= link_to "New task", new_task_path %>
</center>



